<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.pyxis.androidAgilelyTimer"
          android:versionCode="8"
          android:versionName="0.8">
    <application android:icon="@drawable/logo" android:label="@string/app_name_launcher">
        <activity android:name=".activities.StandupStartActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.StandupCountdownActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.TimeboxCountdownActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.TimeboxStartActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.BaseMenuActivity"/>
    </application>
    <uses-sdk android:minSdkVersion="4" />
</manifest>
